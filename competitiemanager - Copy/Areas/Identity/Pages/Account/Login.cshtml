                </div>
                <div class="form-group">
                    <label class="form" asp-for="Input.Password">Wachtwoord</label>
                    <input class="form" asp-for="Input.Password" class="form-control" />
                    <span class="form" asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
