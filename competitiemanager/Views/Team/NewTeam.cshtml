@model NewTeamViewModel



<form asp-action="NewTeam" enctype="multipart/form-data" method="post" class=" form-horizontal" role="form">
    <h1>Nieuw team aanmaken</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Location" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <br />

    <p>Voeg minimaal 2 en maximaal 20 spelers toe aan het team</p>
    @for (int i = 1; i <= 20; i++)
    {
        <label>@i</label>
        <input name="Players" />

    }

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Team aanmaken" />
        </div>
    </div>

</form>
